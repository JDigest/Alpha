<h1>Listing queries</h1>

<table>
  <thead>
    <tr>
      <th>Query text</th>
      <th>Location text</th>
      <th>User location</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @queries.each do |query| %>
      <tr>
        <td><%= query.query_text %></td>
        <td><%= query.location_text %></td>
        <td><%= query.user_location %></td>
        <td><%= link_to 'Show', query %></td>
        <td><%= link_to 'Edit', edit_query_path(query) %></td>
        <td><%= link_to 'Destroy', query, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

